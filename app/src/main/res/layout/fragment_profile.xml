<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<data>
		<import type="org.alfonz.adapter.utility.BindingUtility" />
		<variable name="viewModel" type="com.strvacademy.drabekj.moviestrv.profilescreen.ProfileViewModel" />
		<variable name="view" type="com.strvacademy.drabekj.moviestrv.profilescreen.ProfileView" />
	</data>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<include layout="@layout/toolbar" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			style="@style/HeadingText"
			android:text="@{viewModel.profile.name}" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			style="@style/SecondaryText"
			android:text='@{String.format("Joined %s", @{viewModel.profile.joinedDate})}' />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="@dimen/global_spacing_16"
			android:text="@string/profile_favourite_films_title" />

		<org.alfonz.view.StatefulLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			app:progressLayout="@layout/placeholder_progress"
			app:offlineLayout="@layout/placeholder_offline"
			app:emptyLayout="@layout/placeholder_empty"
			app:state="@{viewModel.state}">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">

				<android.support.v7.widget.RecyclerView
					android:id="@+id/fragment_profile_list_recycler"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					app:recyclerLayout="@{BindingUtility.LAYOUT_GRID_VERTICAL}"
					app:recyclerLayoutSpanCount="@{3}" />

				<Button
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:textColor="@color/colorAccent"
					android:background="@android:color/transparent"
					android:text='@{String.format("VIEW ALL %d FAVOURITE", viewModel.profile.favMoviesArray.length)}'
					android:onClick="@{() -> view.onAllFavouriteClick()}" />

			</LinearLayout>

		</org.alfonz.view.StatefulLayout>
	</LinearLayout>

</layout>